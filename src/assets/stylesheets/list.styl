.b-list
  width 300px
  padding-top 18px
  background-color #5C75B0
  border 1px solid #E3E3E3

  & h1
    color white
    font-size 16px
    line-height 20px
    margin-bottom 10px
    margin-top 0
    padding-left 10px
    font-family Helvetica

  +element(item)
    list-style none
    padding 20px 10px 20px 20px
    background-color white
    border-bottom 1px solid #E3E3E3
    display flex

  +element(info)
    flex 1 0 auto
    span
      font-weight bold

  +element(button)
    margin-right 5px
    color #5C75B0
    &:focus
      outline 0 !importa